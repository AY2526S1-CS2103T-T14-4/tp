<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT" minHeight="105" minWidth="400" maxWidth="400" fillWidth="true" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="10" left="15" right="10" top="10" />
        </padding>

        <Label fx:id="name" wrapText="true" maxWidth="Infinity" styleClass="cell_big_label" text="\$first" />
        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
        <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" />

        <Line id="separator" startX="0.0" startY="50.0" endX="30" endY="50.0"
            stroke="black" strokeWidth="2.0">
            <VBox.margin>
                <Insets top="7" />
            </VBox.margin>
        </Line>

        <FlowPane fx:id="tags" />

        <Label id="caseNotes" text="Case Notes:">
            <VBox.margin>
                <Insets top="7" />
            </VBox.margin>
        </Label>
        <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" />
    </VBox>
    <Label fx:id="id" alignment="CENTER_RIGHT" contentDisplay="RIGHT"
        prefHeight="17.0" prefWidth="43.0" styleClass="cell_big_label" HBox.hgrow="ALWAYS" />
</HBox>
